	</style>
	<script type="text/javascript" src="#springUrl('/res/js/jquery.min.js')"></script>
</head>
<body style="text-align:center;">
	<!-- <div class='wrap'> -->
		<div style='margin:0 auto;text-align:center;width:1024px;position:relative;'>
			<img src="#springUrl('/res/images/login2.jpg')" border='0' alt="登录"/>
			<div class='main_content' style='position: absolute;left: 266px;top: 360px;'>
				<div class='loginBox'>$!screen_content</div>
				<div style="height:40px;width:130px;margin:15px 0 0 0;cursor:pointer;font-size:26px;color:blue;" onclick="$('#login_form').submit();">
				<img src="#springUrl('/res/images/5.png')"/>
				</div>
				<div style="padding:4px 0 0 0;">
					<table>
						<tr><td align='center' style='padding-top:10px;'>
							#if($error)
								<span style="color:red;font-size:13px;">$error</span>
						    #else
						    	<span style="color:blue;font-size:13px;">请输入您的用户名和密码</span>
							#end
						</td></tr>
					</table>
				</div>
			</div>
				
