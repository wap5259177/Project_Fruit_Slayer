##建设成效->视频管理
<div id="$di.id" title="$!{title}" style="width:900px;height:550px;padding:6px;" buttons="#${di.id}-buttons" modal='true'>
<input type='hidden' id='id' value='$!{id}' />
<table id='build_file'></table>	
##<div style='text-align:center;vertical-align:middle;width:100%;height:100%;'></div>
<div id='file_dlg' style="display:none;"></div>
</div>
<div id="${di.id}-buttons">
<a href="#" id='a_close' onclick="javascript:$('#${di.id}').bupdlg('close');$('#$!{gridid}').bupgrid('reload');">关闭</a>
</div>

<script type="text/javascript">
jQuery(function() {
	jQuery('#a_close').bupabutton({flat : true});
	
	jQuery('#build_file').bupgrid({
		url : '/s/cl/vm/file/search?id=' + $('#id').val(),
		//queryParams : {id : $('#id').val()},
		dataType : 'json',
		idField : 'id',
		sortField : 'createAt',
		sortOrder : 'desc',
		showRownum : false,
		showPagebar : false,
		fit : true,
		fitColumns : true,
		pageSize : 100,
		frozenColumns : [ [ {
			field : 'ck',
			checkbox : true
		} ] ],
		columns : [ [ {
			title : '文件名',
			field : 'name',
			width : 220,
			sortable : true
		}, {
			title : '类型',
			field : 'type',
			width : 80,
			sortable : true
		}, {
			title : '大小(KB)',
			field : 'length',
			width : 100,
			sortable : true
		}, {
			title : '分享',
			field : 'shared',
			width : 60,
			sortable : true
		}, {
			title : '操作',
			field : 'operation',
			width : 250,
			formatter: function(value,row,index){
				var id = row.id;
				return "<a class='show_dialog' href='file.detail?id=" + id + "'>查看</a>&nbsp;" 
					 + "<a class='entity_delete' href='/s/cl/vm/file/delete?ids=" + id + "'>删除</a>";
			}
		} ] ],
		toolbar : [ {
			id : 'btnadd',
			text : '上传文件',
			iconClassname : 'icon_add',
			doClick : function() {
				$('#file_dlg').load('/s/cl/vm/file/upload_add?id=$!{id}');
				return false;
			}
		}, {
			id : 'btndel',
			text : '删除',
			iconClassname : 'icon-del',
			doClick : function() {
				var rows = $('#build_file').bupgrid('getSelections');
				if (rows.length == 0) {
					alert("请选择要删除的文件！");
					return;
				}
				if (!confirm("确认删除所选文件？")) {
					return;
				}
				
				var ids = [];
				for ( var i = 0; i < rows.length; i++) {
					ids.push(rows[i].id);
				}
				$.ajax({
					url : '/s/cl/vm/file/delete',
					type : "post",
					data : {ids : ids.join(',')},
					success : function(data) {
						if (data.error) {
							alert(data.msg);
							return;
						}
						$('#build_file').bupgrid('reload');
					},
					error : function() {
						alert("删除出错，请重试");
					}
				});
			}
		} ],
		onLoadSuccess : function(data, param) {
			jQuery('a.show_dialog').click(function() {
				jQuery('#file_dlg').load(this.href);
				return false;
			});
			jQuery('a.entity_delete').click(function() {
				if (!confirm('确认删除此文件？')) {
					return false;
				}
				$.ajax({
					url : this.href,
					type : 'Get',
					data : null,
					success : function(rd) {
						if (typeof rd === "string")
							rd = $.parseJSON(rd);
						if(rd.error){
							$.bupmsg.alert('提示', rd.msg, 'error');
							return;
						}
						$('#build_file').bupgrid('reload');
					},
					error : function() {
						alert('删除出错，请重试');
					}
				});
				return false;
			});
		}
	});
	
});
</script>